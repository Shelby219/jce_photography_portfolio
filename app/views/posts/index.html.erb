<%= render "shared/top_nav" %>
<%= render "shared/nav" %>

<section class="container text-center">
<%= link_to "New Post", new_post_path(@post), :class => "btn btn-dark" %>
</section>
<main role="main">
<div class=" bg-light">
        <section class="container ">
        <div class="row"> 
                 <% @posts.each do |post| %>
                    <div class="column">
                    <%=image_tag post.image, :class => "img-size" %>
                        <p class="index-names"><%= link_to post.title, post %></p>
                    </div>
                    <% end %>

                    </div>
        </section>
    </div> 
</main>

<%= render "shared/footer" %>


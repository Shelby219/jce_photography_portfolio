 
<%= form_with(model: @post, local:true) do |f| %>
          <%= render "shared/error_messages" %>
          <%= f.collection_select :category_id, Category.all, :id, :name, { prompt: "Choose a category" }, :class => 'form-control' %><br>
          <%= f.label :title %><br>
          <%= f.text_field :title, placeholder: '...' , :class => 'form-control' %><br>
          <%= f.label "Image" %><br>
          <%= f.file_field :image , :class => 'form-control ' %><br>
          <%= f.label :description %><br>
          <%= f.text_area :content, size: '30x5', placeholder: '...', :class => 'form-control'  %><br>
          <%= f.submit :class => 'btn btn-dark'%><br>
    <% end %>

    <br>
    <p class="back-to-photos">
    <%= link_to("Back to Photos", root_path)%>
    </p>
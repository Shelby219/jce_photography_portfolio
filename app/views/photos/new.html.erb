</head>
<header>
        <%= render "shared/top_nav" %>
</header>
<body>

        <h1> This is where a new Photo is Added</h1>

        <form action="<%= portfolio_path %>" method="POST" >
            <input type="hidden" value="<%= form_authenticity_token %>" name="authenticity_token" />

            <label>Title</label>
            <input type="text" name="photo[title]" />

            <label>Photo</label>
            <input type="file" name="photo[upload]" />

            <label>Information</label>
            <input type="textarea" name="photo[info]" />


            <label>Date</label>
            <input type="date" name="photo[date]" />

            <input type="submit" value="Create" />
        </form>
</body>



<header>
        <%= render "shared/top_nav" %>
</header>
<body>

        <h1> This is where a new Artwork is Added</h1>

        <form action="<%= artworks_path %>" method="POST" >
            <input type="hidden" value="<%= form_authenticity_token %>" name="authenticity_token" />

            <label>Title</label>
            <input type="text" name="artwork[title]" />

            <label>Artwork</label>
            <input type="file" name="artwork[upload]" />

            <label>Information</label>
            <input type="textarea" name="artwork[info]" />


            <label>Date</label>
            <input type="date" name="artwork[date]" />

            <input type="submit" value="Create" />
        </form>
</body>


